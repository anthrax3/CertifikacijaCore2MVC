@model CertifikacijaMVC.Models.OdabirTipa

@{
    ViewData["Title"] = "Odaberi tip polaganja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Odaberi tip polaganja</h2>

<h4>Odabir tipa polaganja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label title="Tip polaganja" class="control-label"></label>
                <select asp-for="TipPolaganjaId" class ="form-control" asp-items="ViewBag.TipPolaganjaId"></select>
            </div>
            <div class="form-group">
                <label title="Pitanje" class="control-label"></label>
                <select asp-for="PitanjeId" class ="form-control" asp-items="ViewBag.PitanjeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
